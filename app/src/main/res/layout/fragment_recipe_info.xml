<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.RecipeInfoFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_recipe_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".presentation.screen.RecipeInfoFragment">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivRecipeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:padding="6dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_name"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_info_description"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivRecipeInfo"
                app:layout_constraintVertical_bias="0.048" />

            <ImageView
                android:id="@+id/favorite_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_baseline_favorite_border_36"
                app:layout_constraintBottom_toBottomOf="@+id/ivRecipeInfo"
                app:layout_constraintEnd_toEndOf="@+id/ivRecipeInfo"
                app:layout_constraintTop_toTopOf="@+id/ivRecipeInfo"
                app:layout_constraintVertical_bias="0.14" />

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@drawable/ic_baseline_favorite_36"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/ivRecipeInfo"
                app:layout_constraintEnd_toEndOf="@+id/ivRecipeInfo"
                app:layout_constraintTop_toTopOf="@+id/ivRecipeInfo"
                app:layout_constraintVertical_bias="0.14" />

            <TextView
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/info_description_16_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:text="TextView"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivRecipeInfo"
                app:layout_constraintEnd_toEndOf="@id/ivRecipeInfo"
                app:layout_constraintStart_toStartOf="@id/ivRecipeInfo"
                app:layout_constraintTop_toTopOf="@id/ivRecipeInfo" />

            <TextView
                android:id="@+id/info_components"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:text="@string/components"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_description" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_ingredient_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/constraint_recipe_info"
                app:layout_constraintStart_toStartOf="@id/constraint_recipe_info"
                app:layout_constraintTop_toBottomOf="@+id/info_components" >

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_ingredient_base" >

            </androidx.recyclerview.widget.RecyclerView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="#dadada"
        android:clickable="true"
        android:text="@string/textview_button"
        app:layout_constraintBottom_toBottomOf="@id/constraint_root"
        app:layout_constraintEnd_toEndOf="@id/constraint_root"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="@id/constraint_root" />
</androidx.constraintlayout.widget.ConstraintLayout>